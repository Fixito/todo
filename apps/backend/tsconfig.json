{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["dist"],

  "tsc-alias": {
    "resolveFullPaths": true
  }
}
